<!--This web page displays the applications still in the approval process-->
@model ApplicationsViewModel
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">Applications in Approval Process </h3>
            <div id="">
                <table class="table table-striped table-hover" id="">
                    <thead>
                        <tr>
                            <th>Application ID</th>
                            <th>Applicant </th>
                            <th>Programme</th>
                            <th>Status</th>
                            <th>Supervisor</th>
                            <th>Supervisor Decision</th>
                            <th>PGC Decision</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var application in Model.Applications)
                        {
                            <tr>
                                <td>@application.Id</td>
                                <td>@application.FirstName @application.LastName</td>
                                <td>@application.Programme.ProgrammeName</td>
                                <td>@application.ApplicationStatus</td>
                                <td>@application.Supervisor.Title @application.Supervisor.LastName</td>
                                <td>@application.SupervisorApproval</td>
                                <td>@application.PGCApproval</td>
                                <td><a asp-controller="Application" asp-action="ViewFiles" asp-route-applicationId="@application.Id">View</a></td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
