


<div class="container">
    <div class="page-header">
        <h3>Navigate</h3>
    </div>
</div>



@if (User.IsInRole("PGO"))
{

    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--4-col card-font">
            <div class="demo-card-square mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title mdl-card--expand" id="applications">
                    <h2 class="mdl-card__title-text homeLabel">Create PG Application</h2>
                </div>
                <div class="mdl-card__supporting-text">
                    Create a Postgraduate Application with details and documents from SIMS
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <a class="mdl-button mdl-button--colored" asp-controller="Application" asp-action="Create">
                        View Applications
                    </a>
                </div>
            </div>
        </div>

        <div class="mdl-cell mdl-cell--4-col card-font">
            <div class="demo-card-square mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title mdl-card--expand" id="applications">
                    <h2 class="mdl-card__title-text homeLabel">Completed PG Applications</h2>
                </div>
                <div class="mdl-card__supporting-text">
                    View Postgraduate Appplications that have being reviewed by the Supervisor and Postgraduate Coordinator to upload decision on to SIMS
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <a class="mdl-button mdl-button--colored" asp-controller="Application" asp-action="ReviewedApplications">
                        View Applications
                    </a>
                </div>

            </div>
        </div>
    </div>
}
else if (User.IsInRole("Supervisor"))
{
    <div class="mdl-grid">

        <div class="mdl-cell mdl-cell--4-col">
            <div class="demo-card-square mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title mdl-card--expand" id="applications">
                    <h2 class="mdl-card__title-text homeLabel">Postgraduate Applications</h2>
                </div>
                <div class="mdl-card__supporting-text">
                    Review assigned Applications
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <a class="mdl-button mdl-button--colored" asp-controller="Application" asp-action="SupervisorViewApplications">
                        View Applications
                    </a>
                </div>
            </div>
        </div>
    </div>

}
else if (User.IsInRole("PGC"))
{

    <div class="mdl-grid">

        <div class="mdl-cell mdl-cell--4-col card-font">
            <div class="demo-card-square mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title mdl-card--expand" id="applications">
                    <h2 class="mdl-card__title-text homeLabel">Postgraduate Applications</h2>
                </div>
                <div class="mdl-card__supporting-text">
                    Review assigned Applications
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <a class="mdl-button mdl-button--colored" asp-controller="Application" asp-action="PGCViewApplications">
                        View Applications
                    </a>
                </div>
            </div>
        </div>
    </div>

}


